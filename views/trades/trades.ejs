<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <div class="container mt-2">
        <h1 class="text-center mb-4">All Trades</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Stock Name</th>
                        <th>Price</th>
                        <th>Order Type</th>
                    </tr>
                </thead>
                <tbody>
                    <% trades.forEach(trade => { %>
                    <tr>
                        <td><%= trade.stockName %></td>
                        <td><%= trade.price %></td>
                        <td><span class="badge <%= trade.orderType === 'buy' ? 'badge-success' : 'badge-danger' %>">
                            <%= trade.orderType.charAt(0).toUpperCase() + trade.orderType.slice(1) %>
                        </span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/trade/add" class="btn btn-primary">Add Another Trade</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
