<link
  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div class="text-center mt-3">
  <a href="/trade" class="btn btn-primary btn-sm float-right"
    >Show All Trades</a
  >
</div>

<div class="container mt-1">
  <h1 class="text-center mb-4">Add New Trade</h1>

  <% if (message) { %>
  <div class="alert alert-success"><%= message %></div>
  <% } %> <% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/trade/add" method="POST" class="border p-4 bg-light rounded">
    <div class="form-group">
      <label for="stockName">Stock Name</label>
      <input
        type="text"
        id="stockName"
        name="stockName"
        class="form-control"
        placeholder="Enter Stock Name"
        required
      />
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input
        type="number"
        id="price"
        name="price"
        class="form-control"
        placeholder="Enter Price"
        required
      />
    </div>

    <div class="form-group">
      <label for="orderType">Order Type</label>
      <select id="orderType" name="orderType" class="form-control" required>
        <option value="buy">Buy</option>
        <option value="sell">Sell</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success btn-block mt-3">
      Add Trade
    </button>
    <button type="reset" class="btn btn-secondary btn-block mt-2">Clear</button>
  </form>

  <% include ../partials/_TradeList.ejs %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
