<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  rel="stylesheet"
/>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-3">
      <%- include('../partials/_Sidebar.ejs') %>
    </div>
    <div class="col-md-9">
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2 align-items-center">
            <h5 class="text-primary fw-normal mb-0">Execution List</h5>
          </div>
        </div>
      </div>

      <div class="card shadow p-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <button class="btn btn-outline-primary" id="refreshExecutions">
                <i class="fa-solid fa-arrows-rotate"></i> Refresh
            </button> 
          </div>
        </div>

        <div class="table-responsive">
          <table
            class="table table-sm fs--1 mb-0 table-bordered table-hover align-middle"
          >
            <thead class="table-primary text-center">
              <tr>
                <th class="fw-bold">Group ID</th>
                <th class="fw-bold">Trade Date</th>
                <th class="fw-bold">Symbol</th>
                <th class="fw-bold">Position</th>
                <th class="fw-bold">Price</th>
              </tr>
            </thead>
            <tbody id="executionTable"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function () {
  function fetchExecutions() {
    $.ajax({
      url: '/api/journal/execution-list',
      type: 'GET',
      success: function (executions) {
        const tableBody = $('#executionTable');
        tableBody.empty();

        if (executions.length === 0) {
          tableBody.append(
            '<tr><td colspan="5" class="text-center">No executions found.</td></tr>'
          );
          return;
        }

        executions.forEach((execution) => {
          const tradeRows = execution.tradeIds
            .map(
              (trade) => `
            <tr>
              <td>${execution._id}</td>
              <td>${new Date(trade.tradeDate).toLocaleDateString()}</td>
              <td>${trade.symbol}</td>
              <td>
                ${
                  trade.position === 'Buy'
                    ? '<span class="badge badge-phoenix badge-phoenix-success">BUY</span>'
                    : '<span class="badge badge-phoenix badge-phoenix-danger">SELL</span>'
                }
              </td>
              <td>${trade.entryPrice}</td>
            </tr>
          `
            )
            .join('');
          tableBody.append(tradeRows);
        });
      },
      error: function () {
        alert('Failed to fetch executions.');
      },
    });
  }

  $('#refreshExecutions').on('click', function () {
    fetchExecutions();
  });

  fetchExecutions();
});
</script>
