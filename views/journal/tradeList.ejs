<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"><%- include('../partials/_Sidebar.ejs') %></div>

    <div class="col-md-9">
      <div class="container mt-5">
        <h1 class="text-center">Trades List</h1>
        <table id="tradeTable" class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Stock Name</th>
              <th>Price</th>
              <th>Stock Type</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $.ajax({
      url: '/journal/getAllTrades', //localhost:5110/journal/getAllTrades
      type: 'GET',
      success: function (response) {
        if (response.success) {
          const tradeTableBody = $('#tradeTable tbody');
          tradeTableBody.empty();
          response.data.forEach((trade, index) => {
            const row = `
                <tr>
                  <td>${index + 1}</td>
                  <td>${trade.stockName}</td>
                  <td>${trade.price}</td>
                  <td>${trade.stockType}</td>
                </tr>
              `;
            tradeTableBody.append(row);
          });
        } else {
          alert('Failed to fetch trades: ' + response.message);
        }
      },
      error: function () {
        alert('An error occurred while fetching trades.');
      },
    });
  });
</script>
