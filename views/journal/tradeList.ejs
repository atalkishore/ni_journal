<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  rel="stylesheet"
/>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-3"><%- include('../partials/_Sidebar.ejs') %></div>
    <div class="col-md-9">
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2 align-items-center">
            <div>
              <input
                type="text"
                id="tradeFilter"
                class="form-control"
                placeholder="Search trades"
                style="width: 200px"
              />
            </div>
            <div class="ms-auto d-flex align-items-center gap-3">
              <button class="btn btn-outline-secondary">Advanced</button>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow p-2">
        <div class="mb-3">
          <h5 class="text-primary fw-normal mb-0">Trades</h5>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="btn-group">
            <button class="btn btn-primary active">Table</button>
            <button class="btn btn-light">Charts (Large)</button>
            <button class="btn btn-light">Charts (Small)</button>
          </div>

          <div class="btn-group">
            <button class="btn btn-primary active">Gross</button>
            <button class="btn btn-light">Net</button>
          </div>

          <button class="btn btn-outline-info" id="linkTradesButton">
            <i class="fa-solid fa-link"></i> Link Trades
          </button>
        </div>

        <div class="table-responsive">
          <table
            class="table table-sm fs--1 mb-0 table-bordered table-hover align-middle"
          >
            <thead class="table-primary text-center">
              <tr>
                <th class="fw-bold">Trade Date and Time</th>
                <th class="fw-bold">Instrument</th>
                <th class="fw-bold">Symbol</th>
                <th class="fw-bold">Quantity</th>
                <th class="fw-bold">Position</th>
                <th class="fw-bold">Price</th>
                <th class="fw-bold">Target Price</th>
                <th class="fw-bold">Stop Loss</th>
                <th class="fw-bold">Strategies</th>
                <th class="fw-bold">Trade Notes</th>
                <th class="fw-bold">Actions</th>
              </tr>
            </thead>
            <tbody id="tradeTable"></tbody>
          </table>
        </div>

        <div class="mt-3">
          <table class="table table-bordered align-middle text-start">
            <tbody>
              <tr>
                <td>
                  <strong>Total:</strong>
                  <span id="totalTrades"><strong> $0.00</strong></span>
                </td>
                <td><strong id="totalPnL">$0.00</strong></td>
              </tr>
              <tr>
                <td><strong>Average: $0.00</strong></td>
                <td><strong id="averagePnL">$0.00</strong></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="linkTradesModal"
  tabindex="-1"
  aria-labelledby="linkTradesModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="linkTradesModalLabel">Link Trades</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <table class="table table-sm table-hover">
          <thead>
            <tr>
              <th><input type="checkbox" id="selectAllTrades" /></th>
              <th>Trade Date</th>
              <th>Symbol</th>
              <th>Position</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody id="linkTradesTable"></tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-secondary"
          data-bs-dismiss="modal"
        >
          Cancel
        </button>
        <button
          type="button"
          class="btn btn-outline-primary"
          id="groupTradesButton"
        >
        <i class="fa-solid fa-layer-group"></i>
          Create Group
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    function fetchTrades() {
      $.ajax({
        url: '/api/journal/trades',
        type: 'GET',
        success: function (trades) {
          const tableBody = $('#tradeTable');
          tableBody.empty();

          if (trades.length === 0) {
            tableBody.append(
              '<tr><td colspan="11" class="text-center">No trades found.</td></tr>'
            );
            return;
          }

          trades.forEach((trade) => {
            const row = `
            <tr>
              <td>${new Date(trade.tradeDate).toLocaleDateString()}</td>
              <td>${trade.instrument}</td>
              <td>${trade.symbol}</td>
              <td>${trade.quantity}</td>
              <td>${trade.position}</td>
              <td>${trade.entryPrice}</td>
              <td>${trade.targetPrice || '-'}</td>
              <td>${trade.stopLoss || '-'}</td>
              <td>${trade.strategy || '-'}</td>
              <td>${trade.tradeNotes || '-'}</td>
              <td class="text-center">
                <button class="btn btn-danger btn-sm delete-trade me-1" data-id="${trade._id}">
                  <i class="fa-solid fa-trash"></i>
                </button>
                <button class="btn btn-info btn-sm details-trade me-1" data-id="${trade._id}">
                  <i class="fa-solid fa-circle-info"></i>
                </button>
                <button class="btn btn-warning btn-sm edit-trade" data-id="${trade._id}">
                  <i class="fa-solid fa-pen-to-square"></i>
                </button>
              </td>
            </tr>`;
            tableBody.append(row);
          });

          attachDeleteEvent();
        },
        error: function () {
          alert('Failed to fetch trades.');
        },
      });
    }

    $('#linkTradesButton').on('click', function () {
      $('#linkTradesModal').modal('show');
      fetchTradesForModal();
    });

    function fetchTradesForModal() {
      $.ajax({
        url: '/api/journal/trades',
        type: 'GET',
        success: function (trades) {
          const tableBody = $('#linkTradesTable');
          tableBody.empty();

          trades.forEach((trade) => {
            const row = `
            <tr>
              <td><input type="checkbox" class="tradeCheckbox" data-id="${trade._id}" /></td>
              <td>${new Date(trade.tradeDate).toLocaleDateString()}</td>
              <td>${trade.symbol}</td>
              <td>${trade.position}</td>
              <td>${trade.entryPrice}</td>
            </tr>`;
            tableBody.append(row);
          });
        },
        error: function () {
          alert('Failed to fetch trades for linking.');
        },
      });
    }

    $('#groupTradesButton').on('click', function () {
      const selectedTrades = [];
      $('.tradeCheckbox:checked').each(function () {
        selectedTrades.push($(this).data('id'));
      });

      if (selectedTrades.length === 0) {
        alert('Please select at least one trade to create a group.');
        return;
      }

      $.ajax({
        url: '/api/journal/execution-list',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ tradeIds: selectedTrades }),
        success: function (response) {
          alert('Group created successfully!');
          $('#linkTradesModal').modal('hide');
        },
        error: function () {
          alert('Failed to create group.');
        },
      });
    });

    function attachDeleteEvent() {
      $('.delete-trade').on('click', function () {
        const tradeId = $(this).data('id');
        if (confirm('Are you sure you want to delete this trade?')) {
          $.ajax({
            url: `/api/journal/deleteTrade/${tradeId}`,
            type: 'DELETE',
            success: function (response) {
              alert(response.message);
              fetchTrades();
            },
            error: function () {
              alert('Failed to delete the trade.');
            },
          });
        }
      });
    }

    fetchTrades();
  });
</script>
