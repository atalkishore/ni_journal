<div class="container-fluid px-3">
  <div class="card">
    <div
      class="card-header bg-info-100 text-white p-2 m-0 d-flex justify-content-between align-items-center"
    >
      <h5 class="fw-bold mb-0 fs-0">Trade Details</h5>
      <button id="backButton" class="btn btn-secondary me-1 mb-1">
        <i class="fa-solid fa-arrow-left"></i> Back to List
      </button>
    </div>
    <div class="card-body">
      <div id="loadingSpinner" class="text-center my-4">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading trade details...</p>
      </div>

      <div id="tradeDetailsContent" style="display: none">
        <div class="table-responsive w-100 overflow-auto">
          <table class="table table-bordered table-striped align-middle w-100">
            <thead class="table-info text-center bg-info">
              <tr>
                <th class="fw-bold" style="min-width: 180px">
                  Trade Date & Time
                </th>
                <th class="fw-bold" style="min-width: 140px">Instrument</th>
                <th class="fw-bold" style="min-width: 140px">Symbol</th>
                <th class="fw-bold" style="min-width: 100px">Quantity</th>
                <th class="fw-bold" style="min-width: 140px">Position</th>
                <th class="fw-bold" style="min-width: 140px">Price</th>
                <th class="fw-bold" style="min-width: 140px">Target Price</th>
                <th class="fw-bold" style="min-width: 140px">Stop Loss</th>
                <th class="fw-bold" style="min-width: 160px">Strategies</th>
                <th class="fw-bold" style="min-width: 160px">Tags</th>
                <th class="fw-bold" style="min-width: 160px">
                  Transaction Cost
                </th>
                <th class="fw-bold" style="min-width: 220px">Trade Notes</th>
                <th class="fw-bold" style="min-width: 220px">Screenshots</th>
              </tr>
            </thead>
            <tbody>
              <tr class="text-center">
                <td id="tradeDateTime"></td>
                <td id="instrument"></td>
                <td id="symbol"></td>
                <td id="quantity"></td>
                <td id="position"></td>
                <td id="entryPrice"></td>
                <td id="targetPrice"></td>
                <td id="stopLoss"></td>
                <td id="strategy"></td>
                <td id="tags"></td>
                <td id="transactionCost"></td>
                <td id="tradeNotes"></td>
                <td id="screenshots"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/journal/js/tradeDetails.js?v=<%= ENVNAME === 'prod' ? '2' : Math.random() %>"></script>
