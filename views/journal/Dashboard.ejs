  .chart-container {
    min-height: 300px;
    position: relative;
  }
</style>

<div class="container mt-4">
  <div class="row mb-3">
    <div class="col-lg-4 col-sm-6">
      <div class="dashboard-card text-center" id="dashboard-summary">
        <h5>Last Day PnL</h5>
        <h3 id="last-day-pnl-value">Loading...</h3>
        <p id="last-day-pnl-change">Loading...</p>
      </div>
    </div>
    <div class="col-lg-4 col-sm-6">
