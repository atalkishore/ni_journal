<div class="container-fluid">
  <div class="card shadow p-3 mb-4">
    <h5 class="text-primary">Filters</h5>
    <form id="filtersForm" class="row g-3">
      <div class="col-md-3">
        <div class="form-floating">
          <input class="form-control" id="symbolFilter" type="text" placeholder="Symbol" />
          <label for="symbolFilter">Symbol</label>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-floating">
          <input class="form-control" id="openDateFilter" type="date" placeholder="Open Date" />
          <label for="openDateFilter">Open Date</label>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-floating">
          <input class="form-control" id="closeDateFilter" type="date" placeholder="Close Date" />
          <label for="closeDateFilter">Close Date</label>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-floating">
          <select class="form-control" id="positionFilter">
            <option value="">All</option>
            <option value="long">Buy</option>
            <option value="short">Sell</option>
          </select>
          <label for="positionFilter">Position</label>
        </div>
      </div>
      <div class="col-md-2 d-flex align-items-center justify-content-end ms-auto gap-1">
        <button type="button" class="btn btn-outline-info" id="applyFilter">Apply Filters</button>
        <button type="button" class="btn btn-outline-secondary" id="resetFilters">Reset</button>
      </div>
    </form>
  </div>
  <div class="card shadow-sm">
    <div class="card-header bg-light">
      <h5 class="fw-bold text-primary mb-0">Trade History</h5>
    </div>
    <div class="card-body p-3">
      <div class="table-responsive">
        <table class="table align-middle rounded fs--1">
          <thead class="table-info text-center">
            <tr class="text-start">
              <th class="fw-bold">Open Date</th>
              <th class="fw-bold">Close Date</th>
              <th class="fw-bold">Symbol</th>
              <th class="fw-bold">Position</th>
              <th class="fw-bold">Buy Qty</th>
              <th class="fw-bold">Sell Qty</th>
              <th class="fw-bold">Buy Price</th>
              <th class="fw-bold">Sell Price</th>
              <th class="fw-bold">Actions</th>
            </tr>
          </thead>
          <tbody id="tradeHistoryTableBody"></tbody>
        </table>
      </div>
      <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-end" id="tradeHistoryPagination"></ul>
      </nav>
      <div class="mt-2">
        <p id="tradeCountInfo" class="text-muted"></p>
      </div>
    </div>
  </div>

</div>
</div>

<div class="modal fade" id="groupModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 80%; height: 80%">
    <div class="modal-content" style="height: 100%; overflow-y: auto">
      <div class="modal-header">
        <h5 class="modal-title">Group Details</h5>
        <button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close">
          <i class="fa-solid fa-xmark fs--1"></i>
        </button>
      </div>
      <div class="modal-body">
        <div id="groupDetails">
          <table class="table table-sm fs--1 mb-0 table-bordered table-hover align-middle">
            <thead class="table-info text-center">
              <tr class="text-start">
                <th class="fw-bold">Date and Time</th>
                <th class="fw-bold">Quantity</th>
                <th class="fw-bold">Position</th>
                <th class="fw-bold">Price</th>
              </tr>
            </thead>
            <tbody id="tradeTable" class="fs--1"></tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" type="button">Edit</button>
        <button class="btn btn-outline-primary" type="button" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>






