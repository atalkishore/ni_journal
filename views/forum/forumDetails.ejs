
    <div class="container">
        <h2>Post Details</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Posted by: <%= post.userName %></h5>
                <p class="card-text"><%= post.content %></p>
                <small class="text-muted">Posted on: <%= new Date(post.createdAt).toLocaleString() %></small>
                <hr>

                <button class="btn btn-outline-primary like-btn" data-id="<%= post._id %>">Like (<%= post.likes %>)</button>
                <button class="btn btn-outline-secondary comment-toggle">Comments (<%= post.comments.length %>)</button>

                <div class="comment-section mt-2" style="display:none;">
                    <div class="comments-list">
                        <% post.comments.forEach(comment => { %>
                            <div class="p-2 border-bottom">
                                <strong><%= comment.userName %></strong>: <%= comment.text %>
                                <small class="text-muted"><%= new Date(comment.timestamp).toLocaleString() %></small>
                            </div>
                        <% }) %>
                    </div>
                    <textarea class="form-control mt-2 comment-text" placeholder="Write a comment..."></textarea>
                    <button class="btn btn-sm btn-success mt-2 add-comment" data-id="<%= post._id %>">Post Comment</button>
                </div>
            </div>
        </div>
        <a href="/forum" class="btn btn-secondary mt-3">Back to Posts</a>
    </div>

    <script src="/journal/js/forumDetails.js?v=<%= ENVNAME === 'prod' ? '2' : Math.random() %>"></script>
