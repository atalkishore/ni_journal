<body>
  <!-- Page Title -->
  <h1>Trading Dashboard Animation</h1>

  <!-- Lottie Animation Container -->
  <div id="lottie-container"></div>

  <!-- Script to Load Lottie Animation -->
  <script>
    // Load and configure the Lottie animation
    lottie.loadAnimation({
      container: document.getElementById('lottie-container'), // Target container
      renderer: 'svg', // Render format
      loop: true, // Enable looping
      autoplay: true, // Auto-play animation
      path: 'https://assets7.lottiefiles.com/packages/lf20_StTN7t.json' // Online JSON file URL
    });
  </script>
